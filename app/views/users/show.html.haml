= render "shared/header"
.container
  .row
    .col.s12.m6.offset-m3
      .row
        .input-field.col.s12
          %i.material-icons.prefix find_in_page
          %input#autocomplete-input.autocomplete{:type => "text"}/
          %label{:for => "autocomplete-input"} Search
  .row
    .col.s6
      %h7 24時間以内
    .col.s3.hide-on-small-only
      %h7 作成者
    .col.s2.hide-on-small-only
      %h7 最終閲覧
  - @today_sheets.each_with_index do |sheet, i|
    .row.text-vert-center.sheet-index
      .col.s1.m1
        %i.material-icons.small.icon-vert-center description
      .col.s9.m5
        = sheet.title
      .col.m3.hide-on-small-only.grey-text.darken-3
        自分
      .col.m2.hide-on-small-only.grey-text.darken-3
        = @today_time[i]
      .col.s1.m1.center
        = link_to "#", class: "dropdown-trigger btn-flat show_circle_btn user_show_hover","data-target": "dropdown#{i}" do
          %i.material-icons.small.icon-vert-center.center more_vert
        %ul.dropdown-content{id: "dropdown#{i}"}
          %li
            = link_to "" do
              %i.material-icons text_fields
              名前を変更
          %li
            = link_to "" do
              %i.material-icons delete
              削除
          %li
            = link_to "" do
              %i.material-icons launch
              新しいタブで開く
          %li
            = link_to "" do
              %i.material-icons language
              公開する
          %li
            = link_to "" do
              %i.material-icons supervisor_account
              共有する
  %br/
  .row
    .col.s6
      %h7 過去１週間
  - @week_sheets.each_with_index do |sheet, i|
    .row.text-vert-center.sheet-index
      .col.s1.m1
        %i.material-icons.small.icon-vert-center description
      .col.s9.m5
        = sheet.title
      .col.m3.hide-on-small-only.grey-text.darken-3
        自分
      .col.m2.hide-on-small-only.grey-text.darken-3
        = @week_days[i]
      .col.s1.m1.center
        = link_to "#", class: "dropdown-trigger btn-flat show_circle_btn user_show_hover","data-target": "dropdown#{@today_number + i}" do
          %i.material-icons.small.icon-vert-center.center more_vert
        %ul.dropdown-content{id: "dropdown#{@today_number + i}"}
          %li
            = link_to "" do
              %i.material-icons text_fields
              名前を変更
          %li
